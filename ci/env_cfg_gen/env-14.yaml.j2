     - name: hw_nodes
       driver:
         name: devops.driver.baremetal
       network_pools:  # Address pools for OpenStack networks.

         fuelweb_admin: fuelweb_admin-pool01
         public: public-pool01
         storage: storage-pool01
         management: management-pool01
         private: private-pool01

       nodes:
       {% for node in nodes %}
        # node id: {{ node.name }}  
        - name: slave-{{ "%02d" |format(loop.index) }} 
          role: fuel_slave
          params:
            ipmi_user: !os_env IPMI_USER
            ipmi_password: {{ node.ipmi_pass }}
            ipmi_previlegies: OPERATOR
            ipmi_host: {{ node.ipmi_host }}
            ipmi_lan_interface: lanplus
            ipmi_port: 623

            interfaces:
             - label: eth0
               mac_address: {{ node.macs['eth0'] }}
             - label: eth2
               mac_address: {{ node.macs['eth2'] }} 
             - label: eth3
               mac_address: {{ node.macs['eth3'] }}
            network_config:
              eth0:
                networks:
                 - public
              eth2:
                networks:
                 - fuelweb_admin
                 - storage
                 - management
              eth3:
                 networks:
                 - private
         {% endfor %}
